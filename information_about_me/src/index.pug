extends pug/base

append vars
    - html.classList.push('page-index')

block content
    div.grid-container
        div.block-section.margin-b2px
            div.grid-x
                div.small-8.medium-3.large-2.pr20
                    div.block-ava-img.mt10
                        img(src="images/Avatar.png", title="Avatar")
                div.small-8.medium-5.large-6
                    div.block-form-reg
                        div.block-form-reg-input
                            input(name="name", type="text",placeholder="ИМЯ", title="Имя")
                        div.block-form-reg-input
                            input(name="date",type="date", placeholder="ДАТА РОЖДЕНИЯ", title="Дата рождения")
                        div.block-form-reg-input
                            input(name="sity",type="text",placeholder="ГОРОД", title="Город")
                        div.block-form-reg-input
                            input(name="contact",type="text",placeholder="КОНТАКТНЫЕ ДАННЫЕ", title="Контактные данные")
                        div.block-img-stamp

        div.block-section.margin-b2px
            h4 Навыки
            div.grid-x
                +checkboxSquared('HTML5','SASS','vANILLAJS','GIT','css3','LESS','aNGULAR','fOUNDATION','БЭМ','gULP','JQUERY','BOOTSTRAP')

        div.block-section.pb-65#my_level_js
            div.grid-x
                div.small-8.medium-4.large-4.mt30
                    div.block-diagram.bg-diagram
                        img(src="images/sprites/png/level_js_arrows.png", v-bind:style="levelStyleRotateImg")
                div.small-8.medium-4.large-4.mt30
                    h4.block-diagram-h4 Мой уровень владения <br>Java Script
                    div.block-diagram-text( v-html="level") 0
